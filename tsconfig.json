{
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES6",
    "lib": [
      "es6"
    ],
    "outDir": "dist",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
